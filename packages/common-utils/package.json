{
  "name": "common-utils",
  "main": "out/index.js",
  "scripts": {
    "build": "run-s check-code test build:remove build:compile build:staging build:commit",
    "build:commit": "git commit -m \"feat(common-utils): output utils@`date \"+%Y-%m-%d %H:%M:%S\"`\"",
    "build:compile": "tsc --noEmit false",
    "build:remove": "shx rm -rf ./out",
    "build:staging": "git add ./out",
    "check-all": "npm-run-all fix -p spell-check type-check -s test",
    "check-code": "run-p spell-check lint type-check",
    "fix": "run-p fix:*",
    "fix-ts-by-eslint": "eslint \"./{src,spec}/**/*.ts\" --fix",
    "fix-ts-by-prettier": "prettier \"./{src,spec}/**/*.ts\" --write",
    "fix:js": "prettier \"./*.{js,ts}\" \"./**/*.{js,ts}\" --write",
    "fix:pack": "fixpack",
    "fix:ts": "run-s fix-ts-by-eslint fix-ts-by-prettier",
    "lint": "run-p lint:*",
    "lint-ts-by-eslint": "eslint \"./{src,spec}/**/*.ts\"",
    "lint-ts-by-prettier": "prettier \"./{src,spec}/**/*.ts\" --check",
    "lint:editorconfig": "editorconfig-checker",
    "lint:pack": "fixpack --dryRun",
    "lint:ts": "run-s lint-ts-by-eslint lint-ts-by-prettier",
    "spell-check": "cspell \"./{src,spec}/**/*.ts\"",
    "test": "jest --coverage",
    "type-check": "tsc"
  },
  "devDependencies": {
    "@swc/core": "^1.2.204",
    "@swc/jest": "^0.2.21",
    "@types/jest": "^28.1.2",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "cspell": "^6.1.2",
    "editorconfig-checker": "^4.0.2",
    "eslint": "^8.18.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-sonarjs": "^0.13.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "eslint-plugin-unicorn": "^42.0.0",
    "fixpack": "^4.0.0",
    "jest": "^28.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "shx": "^0.3.4",
    "typescript": "^4.7.4"
  },
  "private": true,
  "version": "0.1.0",
  "license": "MIT"
}
